{
    "env": {
        "browser": true,
        "node": true,
        "phantomjs": true,
        "es6": false
    },

    // "ecmaFeatures": {
    //     "blockBindings": true,
    //     "classes": true,
    //     "destructuring": true
    // },

    "globals": {
        "root": true
    },

    "rules": {
        "camelcase": [1, {"properties": "never"}],
        "eol-last": 0,
        "no-debugger": 1,
        "no-extra-strict": 0,
        "no-shadow": 0,
        "no-underscore-dangle": 0,
        "no-unused-vars": 1,
        "quotes": [2, "single", "avoid-escape"],
        "strict": [0, "global"],
    }
}
